<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout">


    <com.uaoanlao.uaoangsyplayer.View.EmptyControlVideo
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/top_layout"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/finish"
            android:id="@+id/finish"
            android:padding="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:singleLine="true"
            android:text="GSY"
            android:shadowColor="@android:color/background_light"
            android:shadowRadius="1"
            android:shadowDy="1"
            android:shadowDx="1"
            android:ellipsize="end"
            android:id="@+id/title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:id="@+id/top_layout_view"
            android:gravity="center|right">
            <ImageView
                android:id="@+id/xiaochuang"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@mipmap/xiaochuang"
                android:padding="12dp"/>
            <ImageView
                android:id="@+id/touping"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@mipmap/touping"
                android:padding="12dp"/>
            <ImageView
                android:id="@+id/shezhi"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@mipmap/shezhi"
                android:padding="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/loading"
        android:layout_centerInParent="true">
        <com.uaoanlao.uaoangsyplayer.Loading.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallPulseIndicator"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text=""
            android:shadowColor="@android:color/background_light"
            android:shadowRadius="1"
            android:shadowDy="1"
            android:shadowDx="1"
            android:id="@+id/tv_netSpeed"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_layout">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/start"
            android:id="@+id/play"
            android:padding="15dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/shangyiji"
            android:id="@+id/shangyiji"
            android:padding="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:textSize="13dp"
            android:shadowColor="@android:color/background_light"
            android:shadowRadius="1"
            android:shadowDy="1"
            android:shadowDx="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/starttime"
            android:text=""/>
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/seek_bar"
            android:minHeight="7dp"
            android:maxHeight="10dp"
            android:progressDrawable="@drawable/seekbar_style"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:textSize="13dp"
            android:shadowColor="@android:color/background_light"
            android:shadowRadius="1"
            android:shadowDy="1"
            android:shadowDx="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/endtime"
            android:text=""/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/xiayiji"
            android:id="@+id/xiayiji"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="16dp"
            android:text="倍速"
            android:shadowColor="@android:color/background_light"
            android:shadowRadius="1"
            android:shadowDy="1"
            android:shadowDx="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/speed_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="16dp"
            android:text="选集"
            android:shadowColor="@android:color/background_light"
            android:shadowRadius="1"
            android:shadowDy="1"
            android:shadowDx="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/xuanji"/>


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ping"
            android:id="@+id/ping"
            android:padding="15dp"/>
    </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/suos"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/suo"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="16dp"
            android:text=""
            android:shadowColor="@android:color/background_light"
            android:shadowRadius="1"
            android:shadowDy="1"
            android:shadowDx="1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/speed_long"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/err_layout"
            android:clickable="true"
            android:visibility="gone"
            android:background="@android:color/background_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放失败,请尝试更换播放源"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#99888585"
                    app:cardMaxElevation="0dp"
                    app:cardElevation="0dp"
                    android:id="@+id/kp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="重试"
                        android:textColor="@android:color/background_light"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/err_button"
                        android:layout_margin="5dp"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/finish_layout"
            android:clickable="true"
            android:visibility="gone"
            android:background="@android:color/background_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放已完成"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#99888585"
                    app:cardMaxElevation="0dp"
                    app:cardElevation="0dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="重播"
                        android:textColor="@android:color/background_light"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/finish_button1"
                        android:layout_margin="5dp"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#99888585"
                    app:cardMaxElevation="0dp"
                    app:cardElevation="0dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="播放下一集"
                        android:textColor="@android:color/background_light"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/finish_button2"
                        android:layout_margin="5dp"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>